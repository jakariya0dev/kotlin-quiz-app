<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#304459"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bb"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <RelativeLayout
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ques_no_id"
            android:text="Quiz: 1/5"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:text="30 min"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_marginBottom="16dp"
        app:dividerColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/tv_ques_id"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/rl_o1_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/opt_layout_coner_radius"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_opt_serial1_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/opt_serial_bg"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_o1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_opt_serial1_id"
            android:text="This is a option"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_o1_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:visibility="invisible"
            app:tint="@color/secondary_color" />


    </RelativeLayout>

    <Space
    android:layout_width="match_parent"
    android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/rl_o2_id"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/opt_layout_coner_radius"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_marginEnd="16dp"
            android:id="@+id/tv_opt_serial2_id"
            android:background="@drawable/opt_serial_bg"
            android:text="B"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"/>


        <TextView
            android:id="@+id/tv_o2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_opt_serial2_id"
            android:text="This is a option"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_o2_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:visibility="invisible"
            app:tint="@color/secondary_color" />



    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/rl_o3_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/opt_layout_coner_radius"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_opt_serial_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/opt_serial_bg"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_o3_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_opt_serial_id"
            android:text="This is a option"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_o3_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:visibility="invisible"
            app:tint="@color/secondary_color" />


    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/rl_o4_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/opt_layout_coner_radius"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_opt_serial4_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/opt_serial_bg"
            android:gravity="center"
            android:text="D"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_o4_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_opt_serial4_id"
            android:text="This is a option"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_o4_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/secondary_color"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:visibility="invisible"
            app:tint="@color/secondary_color" />


    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <Button
        android:id="@+id/btn_next_id"
        android:backgroundTint="@color/secondary_color"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/submit_btn_bg"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>